@page "/ressources"
@using MyPotion.Data

<PageTitle>Ressources</PageTitle>

<div>
    <NavLink class="btn btn-primary" href="Add" Match="NavLinkMatch.All">
        <i class="fa fa-plus"></i> Ajouter
    </NavLink>
</div>

@if (ingredients != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Effect</th>
                <th colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in ingredients)
            {
                <tr>
                    <td>@ingredient.Name</td>
                    <td><img src="@ingredient.Image"/></td>
                    <td>@ingredient.Effect</td>
                    <td><a href="Edit/Name" class="btn btn-primary"><i class="fa fa-edit"></i> Editer</a></td>
                    <td><button type="button" class="btn btn-primary" @onclick="() => OnDelete(ingredient.Id)"><i class="fa fa-trash"></i> Supprimer</button></td>
                </tr>
            }
        </tbody>
    </table>
}
